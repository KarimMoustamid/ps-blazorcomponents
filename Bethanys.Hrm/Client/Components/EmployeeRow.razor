<tr>
    <td class="align-middle">
        <img src="@($"images/{Employee.EmployeeId}-small.jpg")" class="rounded-circle"/>
    </td>
    <td class="align-middle">@Employee.EmployeeId</td>
    <td class="align-middle">@Employee.FirstName</td>
    <td class="align-middle">@Employee.LastName</td>
    <td class="align-middle">
        <a
            class="btn btn-primary table-btn"
            @onclick="e => showBenefits = !showBenefits">
            <i class="fas fa-thumbs-up"></i>
        </a>
    </td>
    <td>
        <a href="/employeedetail/@Employee.EmployeeId">details</a>
    </td>
</tr>

@if (showBenefits)
{
    <tr>
        Benefit Selected
    </tr>
}