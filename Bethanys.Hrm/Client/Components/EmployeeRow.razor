@inherits EmployeeRowBase

@{
    var cssClass = Employee.HasPremiumBenefits ? "table-success" : "";
}

<tr class="@cssClass">
    <td class="align-middle"><img src="@($"images/{Employee.EmployeeId}-small.jpg")" class="rounded-circle" /></td>
    <td class="align-middle">@Employee.EmployeeId</td>
    <td class="align-middle">@Employee.FirstName</td>
    <td class="align-middle">@Employee.LastName</td>
    <td class="align-middle">
        <a class="btn btn-primary table-btn" @onclick="e => Employee.ShowBenefits = !Employee.ShowBenefits">
            <i class="fas fa-thumbs-up"></i>
        </a>
    </td>
</tr>
@if (Employee.ShowBenefits)
{
    <tr>
        <td colspan="5">
            <BenefitSelector Employee="Employee" OnPremiumToggle="@PremiumToggle" />
        </td>
    </tr>
}