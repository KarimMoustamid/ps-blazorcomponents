
@{
    var cssClass = Employee.HasPremiumBenefits ? "table-success" : "";
}

<tr class="@cssClass">
    <td class="align-middle">
        <img src="@($"images/{Employee.EmployeeId}-small.jpg")" class="rounded-circle"/>
    </td>
    <td class="align-middle">@Employee.EmployeeId</td>
    <td class="align-middle">@Employee.FirstName</td>
    <td class="align-middle">@Employee.LastName</td>
    <td class="align-middle">
        <a
            class="btn btn-primary table-btn"
            @onclick="e => showBenefits = !showBenefits">
            <i class="fas fa-thumbs-up"></i>
        </a>
    </td>
    <td>
        <a href="/employeedetail/@Employee.EmployeeId">details</a>
    </td>
</tr>

@if (showBenefits)
{
    <tr>
        <td colspan="6">
            @* REMEMBER : In this senario the BenefitSelector is dependent of the  EmployeeModel ... we updated the property :  Employee.HasPremiumBenefits , directy in the Parent to be able to render the parent without stateHasChanged()   *@
            <BenefitSelector Employee="Employee" OnPremiumToggle="PremiumToggle"></BenefitSelector>
        </td>
    </tr>
}